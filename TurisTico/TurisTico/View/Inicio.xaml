<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurisTico.View.Inicio">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Frame BackgroundColor="Orange" BorderColor="Black" Padding="3" Margin="0" HorizontalOptions="StartAndExpand">
            <Label Text="TurisTicoTest" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="15"></Label>
            </Frame>
            <ListView ItemsSource="{Binding provinciasss}" HasUnevenRows="True" 
                      ItemSelected="ListView_ItemSelected" 
                      ItemTapped="ListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10"
                                  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0"
                                       FontSize="Body"
                                       Text="{Binding Nommbre_Provincia}"
                                       TextColor="Black"
                                       FontAttributes="Bold"/>
                                
                                <Image Grid.Row="1"
                                       Source="{Binding Imagen_url}"
                                       Aspect="AspectFill"
                                       HeightRequest="300"
                                       WidthRequest="60"/>

                                <Label Grid.Row="2"
                                       Text="{Binding descripcion}"
                                       TextColor="Black"
                                       HorizontalTextAlignment="Center"
                                       FontAttributes="Bold"
                                       VerticalOptions="FillAndExpand"/>




                            </Grid>  
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>